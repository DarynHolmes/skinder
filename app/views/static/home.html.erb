<div class="jumbotron">
  <h1>Skinder</h1>
  <p>A messaging system for real-time audience participation</p>
</div>

<div class="col-xs-12" style="height:50px;"></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:event, url: join_event_path, html: {class: "form-inline"} ) do |f| %>
      <div class="form-group ">
          <%= f.label :code, "Event code " %>
          <%= f.text_field :code, class: 'form-control' %>
      </div>
      <div class="form-group">
          <%= f.submit "Join", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="col-xs-12" style="height:50px;"></div>
<div class="col-xs-12" style="height:50px;"></div>




